            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是好友2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是好友3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是好友4"/>
